generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tema {
  id          Int      @id @default(autoincrement())
  nome        String
  professorId String
  professor   User     @relation("AvaliacoesProfessor", fields: [professorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  disponivel Boolean @default(true)

  Avaliacao Avaliacao[]
}

enum StatusAvaliacao {
  ENVIADA // Aluno enviou a resposta
  CORRIGIDA // Correção concluída
}

model Avaliacao {
  id          Int                 @id @default(autoincrement())
  alunoId     String
  aluno       User                @relation("AvaliacoesAluno", fields: [alunoId], references: [id])
  professorId String?
  professor   User?               @relation("AvaliacoesProfessor", fields: [professorId], references: [id])
  temaId      Int
  tema        Tema                @relation(fields: [temaId], references: [id])
  criterios   CriterioAvaliacao[]
  resposta    String
  correcao    String?
  status      StatusAvaliacao     @default(ENVIADA)
  notaFinal   Int
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model CriterioAvaliacao {
  id          Int       @id @default(autoincrement())
  avaliacaoId Int
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id])
  criterioId  Int
  criterio    Criterio  @relation(fields: [criterioId], references: [id])
  pontuacao   Int
}

model Criterio {
  id           Int      @id @default(autoincrement())
  nome         String
  descricao    String
  pontuacaoMax Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  CriterioAvaliacao CriterioAvaliacao[]
}

// Enum para status da mentoria

enum StatusMentoria {
  AGENDADA
  CONFIRMADA
  REALIZADA
}

model DiaSemana {
  id        Int      @id @default(autoincrement())
  dia       Int
  nome      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Boolean  @default(false)

  horarios Horario[]
}

model SlotHorario {
  id        Int      @id @default(autoincrement())
  nome      String
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Horario Horario[]
}

model Horario {
  id     Int      @id @default(autoincrement())
  data   DateTime @db.Date // Apenas data, sem horário
  status Boolean  @default(true) // true = disponível, false = ocupado (4 mentorias)

  mentorias Mentoria[]

  // Permite até 4 mentorias por horário (data + slot)
  // ERRO: Não é permitido usar campos de relação em índices únicos
  // Solução: Use o campo de chave estrangeira scalar `slotId` ao invés do objeto de relação `slot`
  slotId      Int
  slot        SlotHorario @relation(fields: [slotId], references: [id])
  diaSemanaId Int
  diaSemana   DiaSemana   @relation(fields: [diaSemanaId], references: [id])
  updatedAt   DateTime    @updatedAt

  // Índices para otimizar consultas de disponibilidade
  // Otimiza busca por data+slot com status
  // Otimiza filtros por disponibilidade
  @@unique([data, slotId])
  @@index([data, slotId, status])
  @@index([status])
}

model Mentoria {
  id          Int            @id @default(autoincrement())
  alunoId     String
  aluno       User           @relation("MentoriasAluno", fields: [alunoId], references: [id])
  professorId String?
  professor   User?          @relation("MentoriasProfessor", fields: [professorId], references: [id])
  horarioId   Int
  horario     Horario        @relation(fields: [horarioId], references: [id])
  status      StatusMentoria @default(AGENDADA)
  duracao     Int            @default(20) // Duração em minutos
  feedback    String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Garante que um aluno só possa ter uma mentoria por horário
  // Índices para otimizar consultas
  // Filtra mentorias por status
  // Otimiza contagem de mentorias ativas por horário
  @@unique([alunoId, horarioId])
  @@index([status])
  @@index([horarioId, status])
}

model User {
  id                      String      @id
  name                    String
  email                   String
  emailVerified           Boolean
  image                   String?
  createdAt               DateTime
  updatedAt               DateTime
  sessions                Session[]
  accounts                Account[]
  role                    String?
  banned                  Boolean?    @default(false)
  banReason               String?
  banExpires              DateTime?
  avaliacoesComoAluno     Avaliacao[] @relation("AvaliacoesAluno")
  avaliacoesComoProfessor Avaliacao[] @relation("AvaliacoesProfessor")
  mentoriasComoAluno      Mentoria[]  @relation("MentoriasAluno")
  mentoriasComoProfessor  Mentoria[]  @relation("MentoriasProfessor")
  especialidade           String?
  telefone                String?
  bio                     String?

  fcmTokens FcmToken[] // Relação com tokens FCM
  temas     Tema[]     @relation("AvaliacoesProfessor")
  pushSubscriptions PushSubscription[]

  @@unique([email])
  @@map("user")
}

model FcmToken {
  id         String   @id @default(cuid())
  token      String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceInfo String? // Informações sobre o dispositivo
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, token])
  @@index([token])
  @@map("fcm_token")
}

model PushSubscription {
  id         String   @id @default(cuid())
  endpoint   String   @unique
  p256dh     String   // Chave pública de encriptação
  auth       String   // Segredo de autenticação
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceInfo String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, endpoint])
  @@index([endpoint])
  @@map("push_subscription")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@index([identifier])
  @@map("verification")
}
