generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tema {
  id        Int      @id @default(autoincrement())
  nome      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  disponivel Boolean @default(true)

  Avaliacao Avaliacao[]
}

enum StatusAvaliacao {
  ENVIADA // Aluno enviou a resposta
  CORRIGIDA // Correção concluída
}

model Avaliacao {
  id        Int                 @id @default(autoincrement())
  alunoId   String  
  aluno     User                @relation(fields: [alunoId], references: [id])
  temaId    Int
  tema      Tema                @relation(fields: [temaId], references: [id])
  criterios CriterioAvaliacao[]
  resposta  String
  correcao  String?
  status    StatusAvaliacao     @default(ENVIADA)
  notaFinal Int
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
}

model CriterioAvaliacao {
  id          Int       @id @default(autoincrement())
  avaliacaoId Int
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id])
  criterioId  Int
  criterio    Criterio  @relation(fields: [criterioId], references: [id])
  pontuacao   Int
}

model Criterio {
  id           Int      @id @default(autoincrement())
  nome         String
  descricao    String
  pontuacaoMax Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  CriterioAvaliacao CriterioAvaliacao[]
}

// Enum para status da mentoria
enum StatusMentoria {
  AGENDADA
  REALIZADA
}

model DiaSemana {
  id        Int      @id @default(autoincrement())
  dia       Int
  nome      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Boolean  @default(false)

  @@unique([nome])
}

model SlotHorario {
  id        Int      @id @default(autoincrement())
  nome      String
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Horario Horario[]
}

model Horario {
  id     Int      @id @default(autoincrement())
  data   DateTime @db.Date // Apenas data, sem horário
  status Boolean  @default(true)

  mentorias Mentoria[]

  // Permite até 4 mentorias por horário (data + slot)
  // ERRO: Não é permitido usar campos de relação em índices únicos
  // Solução: Use o campo de chave estrangeira scalar `slotId` ao invés do objeto de relação `slot`
  slotId Int
  slot   SlotHorario @relation(fields: [slotId], references: [id])

  @@unique([data, slotId])
}

model Mentoria {
  id        Int            @id @default(autoincrement())
  alunoId   String
  aluno     User           @relation(fields: [alunoId], references: [id])
  horarioId Int
  horario   Horario        @relation(fields: [horarioId], references: [id])
  status    StatusMentoria @default(AGENDADA)
  duracao   Int            @default(20) // Duração em minutos
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  // Garante que um aluno só possa ter uma mentoria por horário
  @@unique([alunoId, horarioId])
  @@index([status])
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  role       String?
  banned     Boolean?    @default(false)
  banReason  String?
  banExpires DateTime?
  Avaliacao  Avaliacao[]
  Mentorias  Mentoria[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
